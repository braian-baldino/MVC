@using Accountant.MVC.Models.DropDowns
@model Accountant.MVC.Dtos.BalanceDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Balance Mensual</title>
</head>
<body>

    <h4>Balance</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Balance.AnualBalanceId" class="control-label">Año</label>
                    <select asp-for="Balance.AnualBalanceId" class="form-control">
                        @foreach (AnualBalance item in @Model.Years)
                        {
                            <option value="@item.Id">@item.Year</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Balance.MonthId" class="control-label">Mes</label>
                    <select asp-for="Balance.MonthId" class="form-control">
                        @foreach (EMonth item in Model.MonthList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Balance.Month" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a type="button" class="btn btn-outline-primary" asp-controller="AnualBalance" asp-action="Index">Volver</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
