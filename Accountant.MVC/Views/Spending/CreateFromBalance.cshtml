@using Accountant.MVC.Models.DropDowns
@model Accountant.MVC.Dtos.SpendingDto

@{
    ViewData["Title"] = "CreateFromBalance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Añadir Gasto | @Model.Balance.Month</title>
</head>
<body>

    <h4>Añadir Gasto a @Model.Balance.Month</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Spending" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" value="@Model.Balance.Id" asp-for="Spending.BalanceId" class="form-control" asp-items="ViewBag.BalanceId">                     
                </div>
                <div class="form-group">
                    <label asp-for="Spending.Category" class="control-label">Categoria</label>
                    <select asp-for="Spending.Category" class="form-control">
                        @foreach (ESpendingType item in Model.Categories)
                        {
                            <option value="@item.CategoryName">@item.CategoryName</option>
                        }
                    </select>
                    <span asp-validation-for="Spending.Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Spending.Description" class="control-label">Descripcion</label>
                    <input type="text" maxlength="40" asp-for="Spending.Description" class="form-control" required/>
                    <span asp-validation-for="Spending.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Spending.Amount" class="control-label">Monto</label>
                    <input required min="0" asp-for="Spending.Amount" class="form-control" />
                    <span asp-validation-for="Spending.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Spending.Date" class="control-label">Fecha</label>
                    <input type="date" asp-for="Spending.Date" class="form-control" />
                    <span asp-validation-for="Spending.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-outline-primary" />
                    |
                    <a type="button" class="btn btn-outline-danger" asp-controller="Balance" asp-action="Details" asp-route-id="@Model.Balance.Id">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>